<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
>
    <testsuites>
        <testsuite name="Base Test Suite">
            <directory suffix=".php">./tests/base</directory>
        </testsuite>
        <testsuite name="Breadcrumb Test Suite">
            <directory suffix=".php">./tests/breadcrumb</directory>
        </testsuite>
        <testsuite name="Currency Test Suite">
            <directory suffix=".php">./tests/currency</directory>
        </testsuite>
        <testsuite name="Date Test Suite">
            <directory suffix=".php">./tests/date</directory>
        </testsuite>
        <testsuite name="Util Test Suite">
            <directory suffix=".php">./tests/util</directory>
        </testsuite>
        <testsuite name="Validator Test Suite">
            <directory suffix=".php">./tests/validator</directory>
        </testsuite>
    </testsuites>
    <php>
        <ini name="display_errors" value="true"/>
    </php>
</phpunit>